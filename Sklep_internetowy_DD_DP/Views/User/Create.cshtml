@model Sklep_internetowy_DD_DP.Models.User

@{
    ViewData["Title"] = "Create";
}



<br />
<div class="row">
    <div class="col-md-4" style="border: 1px solid; border-radius: 15px; border-color: darkgrey; padding: 10px 20px; box-shadow: 5px 5px 10px #2E2163; margin-left:30px">
        <h3 class="text-purple">Załóż konto</h3>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TermsOfUse"/>
                <label asp-for="TermsOfUse" class="control-label"></label>
                <div><span asp-validation-for="TermsOfUse" class="text-danger"></span> </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Załóż konto" class="btn btn-primary bg-purple" />
            </div>
        </form>
    </div>

    <div style="margin: auto auto;">
        <img src="~/Photos/Registration.png" alt="" width="150" />
    </div>



</div>


<br />
<div style="margin-left: 30px">
    Masz już konto?
    <a asp-action="Login">Zaloguj się</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
