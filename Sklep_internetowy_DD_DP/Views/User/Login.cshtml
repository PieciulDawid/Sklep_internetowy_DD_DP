@model Sklep_internetowy_DD_DP.Models.User

@{
    ViewData["Title"] = "Login";
}



<br />
<div class="row">
    <div class="col-md-4" style="border: 1px solid; border-radius: 15px; border-color: darkgrey; padding: 10px 20px; box-shadow: 5px 5px 10px #2E2163; margin-left:30px">
        <h3 class="text-purple">Zaloguj się</h3>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control ramka-boxa" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control ramka-boxa" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zaloguj" class="btn btn-primary bg-purple" />
            </div>
        </form>
    </div>

    <div style="margin: auto auto;">
        <img src="~/Photos/Login.png" alt="" width="130" /> <!-- TODO obrazek nie powienien się przesuwać -->
    </div>



</div>


<br />
<div style="margin-left: 30px">
    Nie masz jeszcze konta?
    <a asp-action="Create">Zarejstruj się</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
